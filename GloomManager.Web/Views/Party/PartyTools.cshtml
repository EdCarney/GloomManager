
@{
    ViewData["Name"] = "Party Tools";
}

<div>
    <h2>Party Level Settings</h2>
</div>

<div>
    <div class="form-row my-3">
        <div class="input-group col-md-3">
            <div class="input-group-prepend">
                <span class="input-group-text" id="basic-addon1">Player 1 Level</span>
            </div>
            <input type="number" name="level-player1" value="0" class="form-control">
        </div>

        <div class="input-group col-md-3">
            <div class="input-group-prepend">
                <span class="input-group-text" id="basic-addon1">Player 2 Level</span>
            </div>
            <input type="number" name="level-player2" value="0" class="form-control">
        </div>
    </div>

    <div class="form-row my-3">
        <div class="input-group col-md-3">
            <div class="input-group-prepend">
                <span class="input-group-text" id="basic-addon1">Player 3 Level</span>
            </div>
            <input type="number" name="level-player3" value="0" class="form-control">
        </div>

        <div class="input-group col-md-3">
            <div class="input-group-prepend">
                <span class="input-group-text" id="basic-addon1">Player 4 Level</span>
            </div>
            <input type="number" name="level-player4" value="0" class="form-control">
        </div>
    </div>

    <div class="form-row mb-3 ml-1 btn-group btn-group-toggle" data-toggle="buttons">
            <label class="btn btn-secondary" id="btn-difficulty-easy">
                <input type="radio" id="input-difficulty-easy" autocomplete="off" value="easy"> Easy
            </label>
            <label class="btn btn-secondary active" id="btn-difficulty-norm">
                <input type="radio" id="input-difficulty-norm" autocomplete="off" value="normal" checked> Normal
            </label>
            <label class="btn btn-secondary" id="btn-difficulty-hard">
                <input type="radio" id="input-difficulty-hard" autocomplete="off" value="hard"> Hard
            </label>
            <label class="btn btn-secondary" id="btn-difficulty-very-hard">
                <input type="radio" id="input-difficulty-very-hard" autocomplete="off" value="veryHard"> Very Hard
            </label>
    </div>
</div>

<div id="alert-max-scenario" class="alert alert-info w-75" role="alert" hidden="true">
    Maximum scenario level reached!
</div>

<partial name="_ScenarioDetails"/>

<script src='@Url.Content("~/js/gloomManager/party/partyTools.js")' type="text/javascript"></script>@*  *@